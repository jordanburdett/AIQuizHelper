# LLM Configuration - Gemini Only
LLM_PROVIDER=gemini

# Gemini Configuration
GEMINI_API_KEY=ReplaceWithGeminiAPIKEY
GEMINI_MODEL=gemini-2.5-flash-lite

# Database Configuration  
MONGODB_URI=mongodb://127.0.0.1:27017/ai-quiz-helper

# Server Configuration
PORT=3001
NODE_ENV=development

# Wikipedia Fact-Checking Configuration
WIKIPEDIA_FACT_CHECK_ENABLED=true
WIKIPEDIA_MAX_ARTICLES=5
WIKIPEDIA_CONTENT_LIMIT=50000 # can be used to configure how much context is used in fact checking